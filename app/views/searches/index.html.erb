<script src="//maps.google.com/maps/api/js?key=AIzaSyCXYtb08IbxlM7vs60KJgJjhlEJM6xAuEg"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
<script src='//cdn.rawgit.com/googlemaps/js-rich-marker/gh-pages/src/richmarker-compiled.js' type='text/javascript'></script>

<p id="notice"><%= notice %></p>

<h1>Search</h1>

<%= render "form", search: @search%>

<table>
  <thead>
    <tr>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @searches.each do |search| %>
      <tr>
        <td><%= search.zip %></td>
        <td><%= link_to 'Edit', edit_search_path(search) %></td>
        <td><%= link_to 'Destroy', search_path(search), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Search', new_search_path %>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<% if @searches.any? %>
  <% @spots.each do |spot| %>
    <%= link_to new_school_path(text: spot.name) do %>
      <p id="new-search"><%= spot.name %></p>
    <% end %>
  <% end %>
<% end %>

<script type="text/javascript">
buildMap(<%=raw @hash.to_json %>);
</script>
